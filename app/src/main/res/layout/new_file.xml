<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.innovace.fitorflap.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#19defc"
        android:layout_weight="1"
        android:id="@+id/weight_layout"
  >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weight"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="30%"
            android:textSize="30dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:text="Weight Lifiting"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Do you even lift?"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:paddingBottom="5dp"

            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10 sets"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:textColor="#FFF"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#c975f2"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/lotus_layout"
      >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/lotus" />

        <TextView
            android:id="@+id/textView_lotus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="15%"
            android:textSize="30dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/textView2_lotus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3_lotus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:text="Yoga"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3_lotus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Namaste"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:paddingBottom="5dp"

            />

        <TextView
            android:id="@+id/textView4_lotus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_lotus"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView_lotus"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1 hour"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:textColor="#FFF"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#06be62"
        android:layout_weight="1"

        android:layout_marginTop="5dp"
        android:id="@+id/heart_layout"

        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/textView_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="22%"
            android:textSize="30dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/textView2_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3_heart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:text="Cardio"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Run like crazy?"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:paddingBottom="5dp"

            />

        <TextView
            android:id="@+id/textView4_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_heart"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView_heart"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5 miles"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:gravity="right"
            android:textColor="#FFF"
            />







    </RelativeLayout>


</LinearLayout>